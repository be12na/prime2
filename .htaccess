<IfModule mod_rewrite.c>
  RewriteEngine On

  # Serve files from dist/ subfolder as if it were the root
  # If the request is for an existing file/dir inside dist/, serve it
  RewriteCond %{REQUEST_URI} !^/dist/
  RewriteCond %{DOCUMENT_ROOT}/dist%{REQUEST_URI} -f
  RewriteRule ^(.*)$ /dist/$1 [L]

  # If the request is for an existing directory inside dist/, serve it
  RewriteCond %{REQUEST_URI} !^/dist/
  RewriteCond %{DOCUMENT_ROOT}/dist%{REQUEST_URI} -d
  RewriteRule ^(.*)$ /dist/$1 [L]

  # SPA fallback: if nothing matches, serve dist/index.html
  RewriteCond %{REQUEST_URI} !^/dist/
  RewriteRule ^(.*)$ /dist/index.html [L]
</IfModule>

# Proper MIME types
<IfModule mod_mime.c>
  AddType application/javascript .js
  AddType text/css .css
  AddType image/svg+xml .svg
</IfModule>

# Caching
<IfModule mod_headers.c>
  <FilesMatch "\.(js|css|svg|woff2?|ttf|eot)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  <FilesMatch "index\.html$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
  </FilesMatch>
</IfModule>
